<div class="container">
    
    <%= form_tag questions_path do%>
        <%= text_area_tag :content, nil, placeholder: '당신의 질문은 무엇인가요?' %><br>
        <button class="btn waves-effect waves-light" type="submit" name="action" style="left: 86%;">작성
            <i class="material-icons right">send</i>
        </button>
    <% end %>
    <br>
    <ul>
        <% @questions.each do |question| %>
            <li>
                <h3><%= question.title %></h3>
                <p><%= question.content %></p>
            </li>
        <% end %>
    </ul>     
</div>